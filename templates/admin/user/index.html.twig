{% extends 'base.html.twig' %}

{% block main %}
    <h1> {{ 'title.user_list' | trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th>{{ 'label.id' | trans }}</th>
                <th>{{ 'label.fullname' | trans }}</th>
                <th>{{ 'label.username' | trans }}</th>
                <th>{{ 'label.role' | trans }}</th>
                <th>{{ 'label.email' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.fullname }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles | join(', ') }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_user'|trans }}
        </a>
    </div>

    {{ show_source_code(_self) }}
{% endblock %}